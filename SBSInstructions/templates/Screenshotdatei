
<!-- Funktion des Views AnleitungsschritterstellenCreateView -->

def form_valid(self, form):
    anleitung = Anleitung.objects.latest('id')
    form.save_with_anleitung_id(anleitung)
    return super().form_valid(form)


<!-- Funktion der Formklasse AnleitungsschrittForm -->
def save_with_anleitung_id(self, anleitung):
    form = super().save(commit=False)
    form.anleitung = anleitung
    form.save()
    return form



